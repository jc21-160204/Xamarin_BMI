<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:BMI"
             x:Class="BMI.MainPage">

    <StackLayout>
        <!-- Place new controls here -->


        <Entry Placeholder="身長をメートル単位で入力"
               VerticalOptions="CenterAndExpand"
               x:Name="EntryHeight"/>

        <Entry Placeholder="体重をキロ単位で入力"
               VerticalOptions="CenterAndExpand"
               x:Name="Entry"/>
        <Button Text="計算開始"
                Clicked="ButtonBMIClickEvent"
                VerticalOptions="CenterAndExpand"
                x:Name="ButtonBMI"/>
        <Label Text="あなたのBMI数値は"
               VerticalOptions="CenterAndExpand"
               x:Name="LabelResult"/>
        <Button Text="BMIを計算する(別のページ) " 
           HorizontalOptions="Center"
           VerticalOptions="CenterAndExpand" 
           x:Name="ButtonBMI2"/>
    </StackLayout>

</ContentPage>
